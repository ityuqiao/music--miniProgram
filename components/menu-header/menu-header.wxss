/* components/menu-header/menu-header.wxss */
.content {
  width: 100%;
  height: 400rpx;
  background-position: center;
  background-size: cover;
  background-repeat: no-repeat;
  margin-bottom: 20rpx;
}
.img {
  width: 180rpx;
  border-radius: 15rpx;
  margin-left: 50rpx;
  margin-right: 35rpx;
}

.top {
  display: flex;
  padding-top: 50rpx;
}
.top .info {
  color: #fff;
}
.info .name {
  font-size: 28rpx;
  margin-bottom: 28rpx;
}
.user {
  margin-bottom: 28rpx;
}
.info .nickname {
  font-size: 20rpx;
  margin-left: 15rpx;
}
.avatar {
  width: 40rpx;
  border-radius: 50%;
  vertical-align: middle;
}
.desc {
  width: 400rpx;
  font-size: 24rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.bottom {
  /* width: 200rpx; */
  height: 160rpx;
  display: flex;
  align-items: center;
  justify-content: space-evenly;
}
.favor,
.share {
  width: 40rpx;
  vertical-align: middle;
}

.count,
.text {
  color: #fff;
  font-size: 24rpx;
  margin-left: 8rpx;
}


