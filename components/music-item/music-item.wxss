/* components/music-item/music-item.wxss */
.item {
  width: 210rpx;
}

.item .pic {
  position: relative;
}
.item .img {
  width: 100%;
  border-radius: 15rpx;
}

.count {
  position: absolute;
  color: #fff;
  font-size: 20rpx;
  background-color: #555;
  padding: 0 8rpx;
  border-radius: 10rpx;
  opacity: 0.7;
  bottom: 10rpx;
  right: 0;
}

.info {
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;

}