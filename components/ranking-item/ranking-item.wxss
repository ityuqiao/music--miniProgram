/* components/ranking-item/ranking-item.wxss */
.ranking {
  display: flex;
  position: relative;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 240rpx;
  background-color: rgb(241, 234, 234);
  margin-bottom: 20rpx;
  border-radius: 15rpx;
  overflow: hidden;
  padding-left: 15rpx;
}
.ranking .rankingName {
  font-size: 30rpx;
}
.ranking .rankingItem {
  font-size: 22rpx;
}
.image {
  height: 240rpx;
}
.block {
  margin-top: 8rpx;
}
.right .count {
  position: absolute;
  color: #fff;
  bottom: 5rpx;
  right: 0;
  background-color: #ccc;
  opacity: 0.7;
  font-size: 20rpx;
  padding: 0 6rpx;
  border-radius: 10rpx;
}