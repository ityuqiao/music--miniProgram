/* pages/music-player/music-player.wxss */
.backImg, .mask {
  position: fixed;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.mask {
  background-color: rgba(0, 0, 0, .3);
  backdrop-filter: blur(10px);
}

.arrow-left {
  font-size: 40rpx;
  margin-left: 30rpx;
}
.tab {
  display: flex;
  color: #aaa;
  font-size: 26rpx;
}

.tab .item {
  margin: 0 10rpx;
}
.active {
  color: #fff;
}

.main {
  padding: 0 60rpx;
  box-sizing: border-box;
  color: white;
}
.main .img {
  width: 100%;
  border-radius: 15rpx;
}
.info {
  margin-top: 15rpx;
  margin-bottom: 20rpx;
}

.main .songName {
  font-size: 36rpx;
  font-weight: 700;
}
.main .arName {
  font-size: 26rpx;
  margin-top: 8rpx;
}
.lyric {
  text-align: center;
  margin-bottom: 30rpx;
  height: 75rpx;
  width: 400rpx;
  margin: 0 auto;
  font-size: 26rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.time {
  display: flex;
  font-size: 24rpx;
  justify-content: space-between;
}

.slider .process {
  margin: 10rpx 10rpx 10rpx 18rpx;
}
.play {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 40rpx;
}
.play .btn {
  width: 60rpx;
}
.play .order, .play .music {
  width: 80rpx;
}
.play .resume {
  width: 130rpx;
}

.allLyric {
  height: 100%;
  font-size: 25rpx;
  color: #aaa;
  box-sizing: border-box;
  padding-bottom: 30rpx;
}
.allLyric ::-webkit-scrollbar {
  display: none;
}

.allLyric .lyricItem {
  height: 60rpx;
  width: 400rpx;
  margin: 0 auto;
  text-align: center;
}

.lyricActive {
  color: white;
}