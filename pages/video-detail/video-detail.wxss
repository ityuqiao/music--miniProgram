/* pages/video-detail/video-detail.wxss */
page {
  height: 100vh;
  background-color: #f5f5f5;
}
.video {
  width: 100%;
}

.name {
  margin-top: 40rpx;
  font-size: 26rpx;
  /* color: orange; */
  margin-bottom: 10rpx;
  
}
.desc {
  /* color: orange; */
  margin-bottom: 50rpx;
  font-size: 26rpx;
  text-indent: 8%;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
-webkit-line-clamp: 2;
-webkit-box-orient: vertical;
}

.relatedItem .VItem {
  display: flex;
}

.img {
  /* width: 200rpx; */
  flex: 2;
  /* margin-bottom: 15rpx; */
  border-radius: 10rpx;
}
.title {
  font-size: 26rpx;
  flex: 4;
  /* color: white; */
  padding-left: 20rpx;
}
.topRelated {
  margin-bottom: 20rpx;
  font-weight: 700;
  color: hotpink;
}
.VItem {
  /* background-color: rgb(245, 242, 242); */
  margin-bottom: 15rpx;
  border-radius: 10rpx;
}

.content {
  height: calc(100% - 225px);
}
