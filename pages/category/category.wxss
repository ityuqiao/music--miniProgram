/* pages/category/category.wxss */
.outer {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 400rpx;
  height: 400rpx;
  background-color: orange;
}

.inner {
  width: 200rpx;
  height: 200rpx;
  background-color: purple;
}

.title{ 
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
}

.item {
  flex: 1;

}
.active {
  color: orange;
}

.title .active .innerTitle {
  border-bottom: 2px solid orange;
  padding-bottom: 6rpx;
}

.info {
  font-size: 60rpx;
}